            <li><a href="/contact">Contact</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>


    <!-- Welcome Section -->
    <header>
        <h1>WELCOME .<%= username %>!</h1>
        <!-- <p>Your contribution can save lives. Become a donor today!</p> -->

    </header>

    <!-- Statistics Section -->
    <section class="stats">
        <div class="stat-box">
            <h2>Total Donors</h2>
            <p>
                <%= totalDonors %>
            </p>
        </div>
        <div class="stat-box">
            <h2>Total Requests</h2>
            <p>
                <%= totalRequests %>
            </p>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="cta">
        <a href="/donor" class="btn">ðŸ’‰ Become a Donor</a>
        <a href="/receiver" class="btn">ðŸš‘ Request Blood</a>
    </section>

    <section>
